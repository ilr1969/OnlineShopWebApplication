@model IUserStorage

    <h2>Вход</h2>
    <form method="post">
        <div>
            <table>
                <tr>
                    <td>Имя: </td>
                    <td><input type="text" name="name" placeholder="имя" /></td>
                </tr>
                <tr>
                    <td>Пароль: </td>
                    <td><input type="text" name="password" placeholder="пароль" /></td>
                </tr>
            </table>
            <button class="btn btn-success" type="submit" asp-controller="user" asp-action="login">Вход</button>
        </div>
    </form>
    <a asp-controller="user" asp-action="register">Регистрация нового пользователя</a>