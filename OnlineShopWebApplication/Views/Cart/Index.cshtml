@model Dictionary<CartClass, int>
@{decimal result = 0;}

@if (@Model.Count == 0)
{
    <p>В корзине пусто!</p>
}
else
{
    <div class="row">
        <table class="table-bordered" width="100%">
            <tr>
                <th>Название позиции</th>
                <th>Количество товара в позиции</th>
                <th>Стоимость позиции</th>
            <tr />
            @foreach (var product in @Model)
            {
                <tr>
                    <td>@product.Key.Name</td>
                    <td>@product.Value</td>
                    <td>@product.Key.Cost</td>
                </tr>
                result += product.Key.Cost * product.Value;
            }
        </table>
    </div>

    <br />
    <p>Общая стоимость: @result</p>
    <br>
    <a href="#" class="btn-dark">Оформить заказ</a>

}