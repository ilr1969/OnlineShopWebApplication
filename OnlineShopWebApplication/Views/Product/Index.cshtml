@model ProductClass

<div class="row; card shadow">
    <div class="card-header; text-center"><h2>@Model.Name</h2></div>

    <div class="card-text; text-center">
        <img class="card-img" src=@Model.ImagePath>
    </div>

    <div class="card-footer; text-center">
        <h4>Стоимость автомобиля: @Model.Cost</h4>
        <br>
        <a href="/cart/add?productId=@Model.ID" class="btn btn-success">Добавить в корзину</a>
        <a href="/home/index" class="btn btn-primary">Продолжить покупки</a>
    </div>
</div>


