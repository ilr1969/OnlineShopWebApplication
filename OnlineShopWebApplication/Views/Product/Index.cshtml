@model ProductClass

<div class="row; card shadow; position-relative">
    <h2>@Model.Name</h2>
    <a class="btn btn-info" style="position:absolute; right: 3px; top: 3px" asp-controller="compare" asp-action="add" asp-route-productId="@Model.ID">Добавить в сравнение</a>


    <div class="card-text; text-center">
        <img class="card-img" src=@Model.ImagePath>
    </div>

    <div class="card-footer; text-center">
        <h4>Стоимость автомобиля: @Model.Cost</h4>
        <br>
        <a href="/cart/add?productId=@Model.ID" class="btn btn-success">Добавить в корзину</a>
        <a href="/home/index" class="btn btn-primary">Продолжить покупки</a>
    </div>
</div>


