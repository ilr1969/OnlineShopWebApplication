@model ProductClass

<h2>Редактирование продукта</h2>
<form method="post">
    <div>
        <table>
            <tr>
                <td><input type="text" value="@Model.ID" name="productId" hidden/></td>
            </tr>
            <tr>
                <td>Название: </td>
                <td><input type="text" value="@Model.Name" name="name" /></td>
            </tr>
            <tr>
                <td>Описание: </td>
                <td><input type="text" value="@Model.Description" name="description" /></td>
            </tr>
            <tr>
                <td>Стоимость: </td>
                <td><input type="text" value="@Model.Cost" name="cost" /></td>
            </tr>
            <tr>
                <td>ImagePath: </td>
                <td><input type="text" value="@Model.ImagePath" name="ImagePath" /></td>
            </tr>
        </table>
        <button class="btn btn-success" type="submit" asp-controller="product" asp-action="edit">Сохранить изменения</button>
    </div>
</form>
