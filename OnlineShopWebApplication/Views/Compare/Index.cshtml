@model List<ProductClass>

@if (@Model.Count == 0)
{
    <p>Добавьте товары для сравнения.</p>
}
else
{
    <table class="table-bordered" width=100%>
        <tr>
            <th>Свойство</th>
            @foreach (var item in @Model)
            {
                <th>@item.Name (<a asp-controller="compare" asp-action="delete" asp-route-productId="@item.ID">Удалить</a>)</th>
            }
        </tr>
        <tr>
            <td>
                Стоимость
            </td>
            @foreach (var item in @Model)
            {
                <td>
                    @item.Cost
                </td>
            }
        </tr>
        <tr>
            <td>
                Описание
            </td>
            @foreach (var item in @Model)
            {
                <td>
                    @item.Description
                </td>
            }
        </tr>
    </table>
}
