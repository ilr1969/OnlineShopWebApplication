{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information"
		}
	},
	"AllowedHosts": "*",
	"ConnectionStrings": {
		"onlineshop": "Server=localhost;Database=OnlineShopDB;Trusted_Connection=True;"
	},
	"Serilog": {
		"Using": [],
		"MinimumLevel": "Information",
		"WriteTo": [
			{
				"Name": "Console"
			},
			{
				"Name": "File",
				"Args": {
					"path": "C:\\log\\log.json",
					"formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
					"rollingInterval": "Day",
					"fileSizeLimitBytes": "1000000",
					"retainedFileCountLimit": "10",
					"rollOnFileSizeLimit": "true"
				}
			}
		],
		"Enrich": [
			"FromLogContext",
			"WithMachineName",
			"WithProcessId",
			"WithThreadId"
		],
		"Properties": {
			"ApplicationName": "Serilog.WebApplication"
		}
	}
}