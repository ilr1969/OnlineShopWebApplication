@model List<OrderViewModel>

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    @if (@Model == null)
    {
        <div><h3>Нет активных заказов</h3></div>
    }
    else
    {
        <div class="col-9">
            <table class="table-bordered" width="100%">
                <tr>
                    <th>Номер заказа</th>
                    <th>Статус</th>
                    <th>Клиент</th>
                    <th>Дата</th>
                    <th></th>
                </tr>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.OrderNumber</td>
                        <td>@EnumHelper.GetEnumDiaplayName(item.Status)</td>
                        <td>@item.DeliveryInfo.Name</td>
                        <td>@item.CreationDatetime</td>
                        <td><a asp-area="admin" asp-controller="order" asp-action="detail" asp-route-orderNumber="@item.OrderNumber">Подробности</a></td>
                    </tr>
                }
            </table>
        </div>
    }
</div>
